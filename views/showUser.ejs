<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Users</title>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <%-include ('./partials/navbar.ejs')%>
    <h1 class="text-warning text-center">LIST ALL PERSONS</h1>
    <a href="./"><i class="bi bi-house-door"></i></a>
    <div class="container">

        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>


        <% peoples.forEach(people => { %>
        <div class="card">
            <div class="card-header">
                <a href="/delete" class="btn btn-danger">Deletar</a>
                <a href="/delete" class="btn btn-warning">Atualizar</a>
            </div>
            <div class="card-body bg-light ">
            
                <div class="col-md-6">
                    <div class="input-group col-md-6">
                        <div class="input-group-prepend">
                          <span class="input-group-text text-light bg-secondary" id="basic-addon3">Nome</span>
                        </div>
                        <input type="text" class="form-control " id="basic-url" aria-describedby="basic-addon3" value="<%= people.name%>" disabled>
                    </div>
                </div> <br>
                <div class="col-md-6">
                    <div class="input-group col-md-6">
                        <div class="input-group-prepend">
                          <span class="input-group-text text-light bg-secondary" id="basic-addon3">Email</span>
                        </div>
                        <input type="text" class="form-control " id="basic-url" aria-describedby="basic-addon3" value="<%= people.email%>" disabled>
                    </div>
                </div><br>

                <div class="col-md-6">
                    <div class="input-group col-md-6">
                        <div class="input-group-prepend">
                          <span class="input-group-text text-light bg-secondary" id="basic-addon3">RG</span>
                        </div>
                        <input type="text" class="form-control " id="basic-url" aria-describedby="basic-addon3"  value="<%= people.rg%>" disabled>
                    </div>
                </div><br>

                <div class="col-md-12">
                    <div class="input-group col-md-6">
                        <div class="input-group-prepend">
                          <span class="input-group-text text-light bg-secondary" id="basic-addon3">Endere√ßo</span>
                        </div>
                        <input type="text" class="form-control " id="basic-url" aria-describedby="basic-addon3" value="<%= people.address%>" disabled>
                    </div>
                </div><br>

                <div class="col-md-6">
                    <div class="input-group col-md-6">
                        <div class="input-group-prepend">
                          <span class="input-group-text text-light bg-secondary" id="basic-addon3">Nome</span>
                        </div>
                        <input type="text" class="form-control " id="basic-url" aria-describedby="basic-addon3" value="<%= people.city%>" disabled>
                    </div>
                </div><br>  
            </div>
            <%=people.id%>
        </div>
        <br>
        
        <%})%> 
    </div>
  
</body>
</html>