<%-include ('./partials/header.ejs')%>
<body>
  <%-include ('./partials/navbar.ejs')%>
    <div class="container">
        <h1 class="text-success text-center">PAGE REGISTRATION</h1>
        <br>
        <form class="row g-3 form-control" method="POST" action="/savePerson">
            <div class="col-md-6">
              <label for="inputName" class="form-label">Nome</label>
              <input type="text" class="form-control" name="inputName" required>
            </div>
            <div class="col-md-6">
              <label for="inputEmail" class="form-label">Email</label>
              <input type="email" class="form-control" name="inputEmail" required>
            </div>
            <div class="col-6">
              <label for="inputCPF-CNPJ" class="form-label">CPF/CPNJ</label>
              <input type="text" class="form-control" name="inputRG" placeholder="xxxxxxxxx-xx" required>
            </div>
            <div class="col-12">
              <label for="inputAddress" class="form-label">Endere√ßo</label>
              <input type="text" class="form-control" name="inputAddress" placeholder="Apartment, studio, or floor" required>
            </div>
            <div class="col-md-6">
              <label for="inputCity" class="form-label">Cidade</label>
              <input type="text" class="form-control" name="inputCity" required>
            </div>
            
              <button type="submit" class="btn btn-success btn-sm">Register</button>
        
          </form>
    </div>
</body>
<%-include ('./partials/footer.ejs')%>